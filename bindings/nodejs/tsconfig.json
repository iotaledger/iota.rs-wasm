{
    "compilerOptions": {
        "lib": ["es2020", "DOM"],
        "declaration": true,
        "target": "es2020",
        "module": "commonjs",
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "importsNotUsedAsValues": "error",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "resolveJsonModule": true,
        "outDir": "out"
    },
    "include": ["lib/**/*", "types/**/*", "test"]
}
